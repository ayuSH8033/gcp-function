resources:
- type: gcp-types/cloudfunctions-v2beta:projects.locations.functions
  name: {{ properties['deployments'] }}-my-function
  properties:
    parent: projects/{{ properties['projects'] }}/locations/{{ properties['region'] }}
    function: my-{{ properties['deployments'] }}
    buildConfig:
      source:
        storageSource:
          bucket: function-test-420
          object: function-test-420.zip
      entryPoint: {{ properties['entryPoint'] }}
      runtime: {{ properties['runtime'] }}
      environmentVariables: {{ properties['environmentVariables'] }}
    serviceConfig:
      availableMemory: {{ properties['availableMemory'] }}
      timeoutSeconds: {{ properties['timeoutSeconds'] }}

